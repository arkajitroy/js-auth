<% if (messages.error) { %> <%= messages.error %> <% } %>

<link rel="stylesheet" href="css/login.css" />

<h1>Welcome to User Login Page</h1>
<p>Please login with your credentials</p>

<div class="panel">
  <form action="/" method="get">
    <button type="submit" class="btn" id="home">Home</button>
  </form>
  <form action="/register" method="get">
    <button type="submit" class="btn" id="register">Register</button>
  </form>
</div>

<div class="container">
  <div class="form-container">
    <form class="register-form" action="/login" method="POST">
      <div class="all-containers">
        <div class="input-container">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="input-container">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            autocomplete="off"
            required
          />
        </div>
      </div>
      <button class="submit-btn" type="submit">Login</button>
    </form>
  </div>
</div>
